html
  head
    title Template
    link(href='css/default.css' rel='stylesheet' type='text/css')
    link(rel="stylesheet", href="css/sedemat.css")
  body
    div#wrapper
      header#header
        div.header-child
          img#logo(src='images/alcaldia-logo.png')
        div.header-child
          p REPÚBLICA BOLIVARIANA DE VENEZUELA
          p ESTADO TÁCHIRA, ALCALDÍA DEL MUNICIPIO SAN CRISTÓBAL
          p SUPERINTENDENCIA MUNICIPAL DE ADMINISTRACIÓN TRIBUTARIA DE SAN CRISTÓBAL (SUMATSC)
        div.header-child
          img#logo(src='images/encabezado-alcaldia.png')
      img#divider(src='images/franja-2.0.png')
      div#content
        div#planilla(style={'font-size':'13px'})
          div#fecha
            p 
              b FECHA:
              span &nbsp; #{moment(fecha).format('DD/MM/YYYY')}
          div
            p
              h2 CIERRE DE CAJA
          div#planilla(style={'font-size':'13px'})
            div(style={'margin-top':'25px'}).table
              .tr
                .th.center.border-bottom 
                  p
                    b DATOS DE CAJA
              .tr
                div(style={'-webkit-flex':'5'}).td.border-right
                  p 
                    b CAJERO:
                    span &nbsp; #{datos.cajero}
                div(style={'-webkit-flex':'5'}).td
                  p 
                    b FECHA:
                    span &nbsp; #{moment(datos.fecha).format('DD/MM/YYYY')}
            div(style={'margin-top':'25px'}).table
              .tr
                .th.center.border-bottom 
                  p
                    b PUNTO DE VENTA
              .tr
                div(style={'-webkit-flex':'3'}).th.border-right.center.border-bottom 
                  p 
                    b BANCO
                div(style={'-webkit-flex':'2'}).th.border-right.center.border-bottom 
                  p 
                    b TRANSACCIONES
                div(style={'-webkit-flex':'2'}).th.center.border-bottom 
                  p 
                    b MONTO Bs.
              each item in datos.metodoPago.punto.items
                .tr
                  div(style={'-webkit-flex':'3'}).td.border-right.center
                    p #{item.banco}
                  div(style={'-webkit-flex':'2'}).td.border-right.center
                    p #{item.transacciones}
                  div(style={'-webkit-flex':'2'}).td.center
                    p #{new Intl.NumberFormat('de-DE',{minimumFractionDigits:2}).format(item.monto? (item.monto) : 0)}       
            div(style={'margin-top':'25px', 'width':'100%'})
              div(style={'width':'60%'}).table.break-page
                .tr.break-page
                  div(style={'-webkit-flex':'6'}).th.center.border-bottom.border-right
                    p
                      b METODO DE PAGO
                  div(style={'-webkit-flex':'3'}).th.center.border-bottom.border-right
                    p
                      b TRANSACCIONES            
                  div(style={'-webkit-flex':'3'}).th.center.border-bottom
                    p
                      b MONTO BS.   
                .tr.break-page
                  div(style={'-webkit-flex':'6', 'text-align':'start'}).th.border-bottom.border-right
                    p(style={'padding-left':'10px'})
                      b PUNTO DE VENTA
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom.border-right
                    p #{datos.metodoPago.punto.transacciones}            
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom
                    p #{new Intl.NumberFormat('de-DE',{minimumFractionDigits:2}).format(datos.metodoPago.punto.total ? (datos.metodoPago.punto.total) : 0)}
                .tr.break-page
                  div(style={'-webkit-flex':'6', 'text-align':'start'}).th.border-bottom.border-right
                    p(style={'padding-left':'10px'})
                      b EFECTIVO
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom.border-right
                    p #{datos.metodoPago.efectivo.transacciones}
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom
                    p #{new Intl.NumberFormat('de-DE',{minimumFractionDigits:2}).format(datos.metodoPago.efectivo.total ? (datos.metodoPago.efectivo.total) : 0)}
                .tr.break-page
                  div(style={'-webkit-flex':'6', 'text-align':'start'}).th.border-bottom.border-right
                    p(style={'padding-left':'10px'})
                      b EFECTIVO DOLAR
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom.border-right
                    p #{datos.metodoPago.efectivoDolar.transacciones}
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom
                    p #{new Intl.NumberFormat('de-DE',{minimumFractionDigits:2}).format(datos.metodoPago.efectivoDolar.total ? (datos.metodoPago.efectivoDolar.total) : 0)}
                .tr.break-page
                  div(style={'-webkit-flex':'6', 'text-align':'start'}).th.border-bottom.border-right
                    p(style={'padding-left':'10px'})
                      b EFECTIVO EURO
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom.border-right
                    p #{datos.metodoPago.efectivoEuro.transacciones}
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom
                    p #{new Intl.NumberFormat('de-DE',{minimumFractionDigits:2}).format(datos.metodoPago.efectivoEuro.total ? (datos.metodoPago.efectivoEuro.total) : 0)}
                .tr.break-page
                  div(style={'-webkit-flex':'6', 'text-align':'start'}).th.border-bottom.border-right
                    p(style={'padding-left':'10px'})
                      b EFECTIVO PESO
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom.border-right
                    p #{datos.metodoPago.efectivoPeso.transacciones}
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom
                    p #{new Intl.NumberFormat('de-DE',{minimumFractionDigits:2}).format(datos.metodoPago.efectivoPeso.total ? (datos.metodoPago.efectivoPeso.total) : 0)}
                .tr.break-page
                  div(style={'-webkit-flex':'6', 'text-align':'start'}).th.border-bottom.border-right
                    p(style={'padding-left':'10px'})
                      b CHEQUES
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom.border-right
                    p #{datos.metodoPago.cheques.transacciones}            
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom
                    p #{new Intl.NumberFormat('de-DE',{minimumFractionDigits:2}).format(datos.metodoPago.cheques.total ? (datos.metodoPago.cheques.total) : 0)}
                .tr.break-page
                  div(style={'-webkit-flex':'6', 'text-align':'start'}).th.border-bottom.border-right
                    p(style={'padding-left':'10px'})
                      b CREDITO FISCAL
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom.border-right
                    p #{datos.metodoPago.credFiscal.transacciones}            
                  div(style={'-webkit-flex':'3'}).td.center.border-bottom
                    p #{new Intl.NumberFormat('de-DE',{minimumFractionDigits:2}).format(datos.metodoPago.credFiscal.total ?  (datos.metodoPago.credFiscal.total):0 )}          
                if (datos.metodoPago.transferencias.length > 0 && datos.metodoPago.transferencias.length < 3)
                each item in datos.metodoPago.transferencias
                  .tr.break-page
                    div(style={'-webkit-flex':'6', 'text-align':'start'}).th.border-bottom.border-right
                      p(style={'padding-left':'10px'})
                        b TRANSFERENCIA #{item.banco.toUpperCase()}
                    div(style={'-webkit-flex':'3'}).td.center.border-bottom.border-right
                      p #{item.transacciones}            
                    div(style={'-webkit-flex':'3'}).td.center.border-bottom
                      p #{new Intl.NumberFormat('de-DE',{minimumFractionDigits:2}).format(item.monto)}
                .tr.break-page
                  div(style={'-webkit-flex':'6',}).th.border-right
                    p
                      b TOTALES
                  div(style={'-webkit-flex':'3'}).td.center.border-right
                    p #{datos.metodoPago.transacciones}            
                  div(style={'-webkit-flex':'3'}).td.center
                    p #{new Intl.NumberFormat('de-DE',{minimumFractionDigits:2}).format(datos.metodoPago.total ? (datos.metodoPago.total):0)}  
