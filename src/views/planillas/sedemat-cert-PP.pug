extends default
block css
  link(rel="stylesheet", href="css/sedemat.css")
block title
block content
  div#fecha
    p 
      b FECHA:
      span &nbsp; #{moment(fecha).format('DD/MM/YYYY')}
    p 
      b Codigo de Tramite:
      span &nbsp; #{codigo}
  div.titleWithQR
    p#title
      b #{titulo}
    div
      img#QR(src=QR, alt='QR')
  div#planilla
    div(style={'margin-bottom':'20px'})
      div.table(style={'width':'90%', 'font-size':'16px', 'font-weight': 'bold'})
        div.tr
          div(style={'-webkit-flex': 2}).td.border-right.border-bottom.center
            p 
              b Nro. Solicitud
          div(style={'-webkit-flex': 2}).td.border-right.border-bottom.center
            p
              b MOTIVO
          div(style={'-webkit-flex': 2}).td.border-right.border-bottom.center
            p
              b Liquidador
          div(style={'-webkit-flex': 2}).td.border-bottom.center.border-right
            p
              b Cajero
          div(style={'-webkit-flex': 2}).td.border-bottom.center
            p
              b Nº Factura
        div.tr
          div(style={'-webkit-flex': 2}).td.border-right.center
            p #{datos.nroSolicitud}
          div(style={'-webkit-flex': 2}).td.border-right.center
            p #{datos.motivo}
          div(style={'-webkit-flex': 2}).td.border-right.center
            p  USUARIO WEB
          div(style={'-webkit-flex': 2}).td.border-right.center
            p
          div(style={'-webkit-flex': 2}).td.center
            p  #{datos.nroFactura}
    div.table(style={'font-size':'16px'})
      div.tr
        div.td(style={'-webkit-flex': 1}).border-right.border-bottom
          p
            b Tipo De Trámite:
            span &nbsp; #{datos.tipoTramite}
      div.tr
        div(style={'-webkit-flex': 1.5}).td.border-right.center
          p
            b FECHA CREACIÓN:
        div(style={'-webkit-flex': 1.5}).td.border-right
          p #{datos.fechaCre}
        div(style={'-webkit-flex': 2}).td.border-right.center
          p
            b FECHA LIQUIDACIÓN:          
        div(style={'-webkit-flex': 1.5}).td.border-right
          p #{datos.fechaLiq}
        div(style={'-webkit-flex': 2}).td.border-right.center
          p
            b FECHA VENCIMIENTO:         
        div(style={'-webkit-flex': 1.5}).td
          p #{datos.fechaVenc}
    div.table
      div.tr
        div(style={'-webkit-flex': 1}).th.border-bottom.center
          p
            b DATOS DE SOLICITANTE   
      div.tr
        div(style={'-webkit-flex': 2, padding:'0 1px'}).td.border-right.border-bottom.center
          p Razón Social:
        div(style={'-webkit-flex': 5.5}).td.border-right.border-bottom
          p #{datos.propietario.razonSocial}
        div(style={'-webkit-flex': 2.5}).td.border-bottom
          p 
            b RIF.:
            span &nbsp; #{datos.propietario.rif}
      div.tr
        div(style={'-webkit-flex': 2}).td.border-right.border-bottom.center
          p Denom. Comercial:
        div(style={'-webkit-flex': 8}).td.border-bottom
          p 
            span &nbsp; #{datos.propietario.denomComercial}
    div
      div(style={'display':'-webkit-flex'})
        div.table(style={'-webkit-flex': 5.5})
          div.tr
            div(style={'-webkit-flex': 5.5}).th.center.border-right
              p
                b ARTÍCULO
            div(style={'-webkit-flex': 2.5}).th.center.border-right
              p
                b PERIODOS
            div(style={'-webkit-flex': 2}).th.center
              p
                b IMPUESTO                 
          each item in datos.items
            div.tr
              div(style={'-webkit-flex': 5.5, 'text-align':'justify', 'border-top':'1px solid #000'}).td.border-right
                p 
                  span &nbsp; #{item.articulo}
              div(style={'-webkit-flex': 2.5, 'border-top':'1px solid #000'}).td.border-right.center.break-page
                p 
                  span &nbsp; #{item.periodos}                  
              div(style={'-webkit-flex': 2,'border-top':'1px solid #000'}).td.center.break-page
                p 
                  span &nbsp; #{item.impuesto}
      div(style={'margin-top':'20px'}).table.break-page
        div.tr
          div(style={'-webkit-flex': 5.5}).td.border-right.border-bottom
            p
              b TOTAL IVA (16%)
          div(style={'-webkit-flex': 4.5}).td.border-bottom.end
            p #{datos.totalIva}
        div.tr              
          div(style={'-webkit-flex': 5.5}).td.border-right.border-bottom
            p
              b TOTAL RETENCION IVA (75%)
          div(style={'-webkit-flex': 4.5}).td.border-bottom.end
            p #{datos.totalRetencionIva}
        div.tr            
          div(style={'-webkit-flex': 5.5}).td.border-right.border-bottom
            p
              b TOTAL IVA A PAGAR
          div(style={'-webkit-flex': 4.5}).td.border-bottom.end
            p #{datos.totalIvaPagar}
        div.tr
          div(style={'-webkit-flex': 5.5}).td.border-right.border-bottom
            p
              b TOTAL IMPUESTO A PAGAR
          div(style={'-webkit-flex': 4.5}).td.border-bottom.end
            p #{datos.montoTotalImpuesto}
        div.tr            
          div(style={'-webkit-flex': 5.5}).td.border-right
            p
              b Intereses Moratorios
          div(style={'-webkit-flex': 4.5}).td.end
            p #{datos.interesMoratorio}
    div.table.break-page
      div.tr
        div(style={'-webkit-flex': 2}).th.border-bottom.border-right
          p
            b Estatus:
        div(style={'-webkit-flex': 8}).th.border-bottom
          p #{datos.estatus}
      div.tr
        div(style={'-webkit-flex': 1}).th.border-bottom
          p
            b OBSERVACIONES
      div.tr
        div(style={'-webkit-flex': 1}).td
          p
            span &nbsp; #{datos.observacion}
    div.table.break-page
      div(style={'background-color':'rgba(0,0,0,0.2)'}).tr
        div(style={'-webkit-flex': 1}).td.border-right.center
          p
            b Total Liquidado:
            span &nbsp; #{datos.totalLiq}
        div(style={'-webkit-flex': 1}).td.border-right.center
          p
            b Total Recaudado:
            span &nbsp; #{datos.totalRecaudado}
        div(style={'-webkit-flex': 1}).td.center
          p
            b Total Credito Fiscal:
            span &nbsp; #{datos.totalCred}
block footer