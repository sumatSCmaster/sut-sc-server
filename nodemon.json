{
  "restartable": "rs",
  "ignore": ["**/*.test.ts", "**/*.spec.ts", ".git", "node_modules", ".vscode"],
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "verbose": true,
  "watch": ["src"],
  "exec": "npm run start:debug",
  "ext": "ts",
  "env": {
    "NODE_ENV": "development"
  }
}
