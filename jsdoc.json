{
  "source": {
    "include": ["src"],
    "includePattern": ".ts$",
    "excludePattern": "(node_modules|docs)"
  },
  "plugins": ["jsdoc-plugin-typescript"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "recurse": true,
    "destination": "./docs"
  },
  "typescript": {
    "moduleRoot": "src"
  }
}
